<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingBottom="10dp">


    <TextView
        android:id="@+id/Starting_Time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/starting_time"
        android:textSize="16sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/SDG_Route_Start_FromTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/Starting_Time_txt"
        android:layout_toRightOf="@+id/Starting_Time_txt"
        android:text="06:30 Am"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/search_results_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SDG_Route_Start_FromTime"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp" />


    <com.pkmmte.view.CircularImageView
        android:id="@+id/search_list_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/search_results_days"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/defaultdriver" />


    <TextView
        android:id="@+id/DriverEnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_results_days"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/search_list_photo"
        android:layout_toRightOf="@+id/search_list_photo"
        android:text="@string/not_set"
        android:textSize="19sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/Nationality_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DriverEnName"
        android:layout_alignStart="@+id/DriverEnName"
        android:layout_below="@+id/DriverEnName"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/search_list_photo"
        android:layout_toRightOf="@+id/search_list_photo"
        android:text="@string/not_set"
        android:textSize="15sp"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/Best_Drivers_Item_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Nationality_en"
        android:layout_alignStart="@+id/Nationality_en"
        android:layout_below="@+id/DriverEnName"
        android:padding="2dp"
        android:text=""
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        />


    <ImageView
        android:id="@+id/rate_pic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/Best_Drivers_Item_rate"
        android:layout_toEndOf="@+id/Best_Drivers_Item_rate"
        android:layout_toRightOf="@+id/Best_Drivers_Item_rate"
        android:src="@drawable/rate"

        />

    <TextView
        android:id="@+id/LastSeenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rate_pic"
        android:layout_alignLeft="@+id/Nationality_en"
        android:layout_alignStart="@+id/Nationality_en"
        android:text="@string/last_seen_textview"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/LastSeenTvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rate_pic"
        android:layout_toRightOf="@+id/LastSeenText"
        android:layout_toEndOf="@+id/LastSeenText"
        android:layout_alignBottom="@+id/LastSeenText"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text=""
        android:layout_marginTop="10dp"

        />




    <LinearLayout
        android:id="@+id/GreenPoint_Linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_list_photo"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="2"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-8dp"
                android:src="@drawable/leaf" />

            <View
                android:id="@+id/GreenLine"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#4a7e03" />


            <View
                android:id="@+id/GreenLine2"
                android:layout_width="0.5dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:background="#4a7e03" />

            <TextView
                android:id="@+id/Green_Points_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textColor="#4a7e03"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/points_str"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:maxLines="1"
                />


        </LinearLayout>


    </LinearLayout>

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@drawable/green_point_border"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:id="@+id/Green1"
                android:layout_centerHorizontal="true"
                >
                <ImageView
                    android:id="@+id/GreenPointCar_im"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="-5dp"
                    android:layout_marginRight="-5dp"
                    android:src="@drawable/greenpointcar"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/GreenPointCar_im"
                    android:layout_toRightOf="@+id/GreenPointCar_im"
                    android:text="@string/co2_saving"
                    android:textColor="#4a7e03"
                    android:textSize="9sp" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Green1"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:id="@+id/Green_co2_saving_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginStart="2dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="12054815"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/Green_co2_saving_txt"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@+id/Green_co2_saving_txt"
                    android:layout_toRightOf="@+id/Green_co2_saving_txt"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="@string/kg_str"
                    android:textSize="12sp" />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


