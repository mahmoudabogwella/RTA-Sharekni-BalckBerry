    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Nationality_en"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:text="Send Invitation"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bordersbuttom"
        android:visibility="invisible"
        android:id="@+id/PassengerSendInvite"
        />

    <ImageView

        android:id="@+id/im1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/DriverEnName"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/msg"

        />


    <ImageView
        android:id="@+id/im5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/im1"
        android:layout_toLeftOf="@+id/im1"
        android:layout_toStartOf="@+id/im1"
        android:paddingTop="10dp"
        android:src="@drawable/call"

        />


</RelativeLayout>

