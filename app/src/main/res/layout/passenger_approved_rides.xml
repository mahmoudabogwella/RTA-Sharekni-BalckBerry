        <TextView
            android:id="@+id/driver_profile_dayWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/StartFromTime"
            android:layout_alignStart="@+id/StartFromTime"
            android:layout_below="@+id/StartFromTime"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />


        <RelativeLayout
            android:id="@+id/Relative_Details"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/StartFromTime"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/borders_quicksearch_btn">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/Account_Approved_rides_Details"
                android:textColor="#FFFFFF"
                android:textSize="14sp"

                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/Relative_Leave"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/Relative_Details"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/borders_quicksearch_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/Account_Approved_rides_leave"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/Relative_Driver"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/Relative_Details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/borders_quicksearch_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/Account_Approved_rides_Driver"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/driver_profile_RouteEnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/testborder1"
        android:gravity="center_horizontal|center"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:text="RouteName"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>