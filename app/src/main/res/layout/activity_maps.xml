<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="rta.ae.sharekni.MapsActivity" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MapRelative2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"

        android:layout_marginStart="10dp"
        >

        <ImageView
            android:id="@+id/pass_icon_trigger_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/passenger_icon_trigger"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/driver_icon_trigger_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/driver_icon_trigger"
            android:visibility="invisible"
            />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/MapRelative"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/Register_Input_Fields_Height"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mapborder"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="invisible"
        android:layout_marginStart="10dp"
        >


        <TextView
            android:id="@+id/malefemale_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="0dp"
            android:text="@string/drivers_Str"
            android:textColor="@color/primaryColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/femalemale_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/malefemale"
            android:layout_toRightOf="@+id/malefemale"
            android:text="@string/passengers_Str"
            android:textColor="@color/gray_before_login"
            android:textSize="16sp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            />


        <ImageView
            android:id="@+id/malefemale"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/malefemale_txt"
            android:layout_toRightOf="@+id/malefemale_txt"
            android:src="@drawable/slidemale" />

        <ImageView
            android:id="@+id/femalemale"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/malefemale_txt"
            android:layout_toRightOf="@+id/malefemale_txt"
            android:src="@drawable/slidefemale"
            android:visibility="invisible"

            />

    </RelativeLayout>

</FrameLayout>




