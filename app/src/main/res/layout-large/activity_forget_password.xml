<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgetPassword">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />




    <EditText
        android:id="@+id/edit_Forgetpass_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/app_bar"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bordersedittext"
        android:gravity="center"
        android:hint="@string/enter_your_email"
        android:lines="1"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColorHint="@color/primaryColor"
        android:textSize="18sp" />


    <Button
        android:id="@+id/btn_Forgetpass_submit"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit_Forgetpass_email"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bordersbuttom"
        android:gravity="center"
        android:text="@string/Btn_Submit_txt"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/txt_submit"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Forgetpass_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="A verification meesage has been sent to you with ur password, please check your email and cell phone"
        android:textSize="15sp"
        android:textStyle="italic"
        android:visibility="invisible" />


</RelativeLayout>
