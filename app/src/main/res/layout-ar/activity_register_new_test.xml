        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border">


            <TextView
                android:id="@+id/malefemale_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/malefemale"
                android:layout_toRightOf="@+id/malefemale"
                android:text="@string/reg_gender_male"
                android:textColor="@color/primaryColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/femalemale_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/malefemale"
                android:layout_toStartOf="@+id/malefemale"

                android:text="@string/reg_gender_female"
                android:textColor="@color/gray_before_login"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/malefemale"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/slidemale" />

            <ImageView
                android:id="@+id/femalemale"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/slidefemale"
                android:visibility="invisible"

                />

        </RelativeLayout>


        <Button
            android:id="@+id/btnUploadPhotoReg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border_button"
            android:text="@string/reg_upload_photo"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp">


            <RelativeLayout
                android:id="@+id/terms_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">


                <TextView
                    android:id="@+id/txt_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/reg_accept_rta"

                    android:textSize="13sp"

                    />


                <TextView
                    android:id="@+id/Terms_And_Cond_txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/txt_terms"
                    android:layout_toRightOf="@+id/txt_terms"
                    android:textColor="@color/primaryColor"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/Privacy_and_poolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Terms_And_Cond_txt_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="13sp" />

            </RelativeLayout>


            <Button
                android:id="@+id/btn_register_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/terms_relative"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/user_register_border_button"
                android:text="@string/reg_save"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

        </RelativeLayout>


