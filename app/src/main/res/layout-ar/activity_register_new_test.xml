<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbackgroundtest">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <include
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/both_toggle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/passenger_toggle"
                android:layout_toRightOf="@+id/passenger_toggle"
                android:src="@drawable/bothoffarabic" />

            <ImageView
                android:id="@+id/both_toggle_active"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/passenger_toggle"
                android:layout_toRightOf="@+id/passenger_toggle"

                android:src="@drawable/bothactivearabic"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/passenger_toggle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignTop="@+id/both_toggle"
                android:layout_centerHorizontal="true"
                android:src="@drawable/passengeroffarbic" />

            <ImageView
                android:id="@+id/passenger_toggle_active"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignTop="@+id/both_toggle"
                android:layout_centerHorizontal="true"
                android:src="@drawable/passengeractivearabic"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/driver_toggle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/passenger_toggle"
                android:layout_toStartOf="@+id/passenger_toggle"

                android:src="@drawable/driveroffarabic" />

            <ImageView
                android:id="@+id/driver_toggle_active"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/passenger_toggle"
                android:layout_toStartOf="@+id/passenger_toggle"

                android:src="@drawable/driveractivearabic"
                android:visibility="invisible" />


        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/FirstName_Linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/user_register_border"
            android:orientation="horizontal"

            >


            <EditText
                android:id="@+id/edit_reg_fname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/borders_edit_txt_user_register"
                android:cursorVisible="true"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZضصثقفغإعهخحجدذشسيبللأاأتنمكطئءؤرلالآىةوزظ"
                android:hint="@string/Reg_FirstN"
                android:lines="1"
                android:maxLines="1"
                android:nextFocusDown="@+id/edit_reg_lname"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp"

                />





        </LinearLayout>



        <LinearLayout
            android:id="@+id/LastName_Linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/user_register_border">


            <EditText
                android:id="@+id/edit_reg_lname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borders_edit_txt_user_register"
                android:cursorVisible="true"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZضصثقفغإعهخحجدذشسيبللأاأتنمكطئءؤرلالآىةوزظ"
                android:hint="@string/Reg_LastN"
                android:lines="1"
                android:maxLines="1"
                android:nextFocusDown="@+id/edit_reg_phone"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp"

                />


        </LinearLayout>



    </LinearLayout>


        <LinearLayout
            android:layoutDirection="ltr"
            android:id="@+id/MobileNumber_Linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border"
            android:orientation="horizontal">

            <TextView
                android:layoutDirection="ltr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="+971 - " />

            <EditText
                android:layoutDirection="ltr"
                android:id="@+id/edit_reg_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borders_edit_txt_user_register"
                android:cursorVisible="true"
                android:digits="1234567890"
                android:hint="@string/REg_Mobile"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="9"
                android:maxLines="1"
                android:nextFocusDown="@+id/edit_reg_username"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#747474"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout

            android:id="@+id/UserName_Linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border">

            <EditText
                android:id="@+id/edit_reg_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borders_edit_txt_user_register"
                android:cursorVisible="true"
                android:hint="@string/Reg_Email"
                android:lines="1"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Password_Linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border">

            <EditText
                android:id="@+id/edit_reg_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borders_edit_txt_user_register"
                android:cursorVisible="true"
                android:ellipsize="start"
                android:hint="@string/Reg_pass"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/Language_Linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/user_register_border">

            <TextView
                android:id="@+id/autocomplete_lang_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borders_edit_txt_user_register"
                android:hint="@string/Reg_PrefLang"
                android:lines="1"
