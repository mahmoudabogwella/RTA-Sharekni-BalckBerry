<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frbackgroundtwo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shareknilogo" />


        <ImageView
            android:id="@+id/OnBoard_Changelanguae"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/pick_language">


        </ImageView>

        <RelativeLayout
            android:id="@+id/im_best_drivers"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:background="@drawable/bestdrivers_border"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <ImageView
                android:id="@+id/splash_best_drivers_im"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/splashbestdrivers" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/splash_best_drivers_im"
                android:layout_toRightOf="@+id/splash_best_drivers_im"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/onboard_best_drivers"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/im_best_rides"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_above="@+id/im_best_drivers"
            android:layout_alignLeft="@+id/im_best_drivers"
            android:layout_alignStart="@+id/im_best_drivers"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bestdrivers_border"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            >

            <ImageView
                android:id="@+id/splash_top_rides_im"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/splashmostrides" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/splash_top_rides_im"
                android:layout_toRightOf="@+id/splash_top_rides_im"
                android:text="@string/onboard_most_rides"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>