            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/user_register_border"
                android:layoutDirection="ltr"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:text=" + 971 - " />

                <EditText
                    android:id="@+id/edit_reg_mob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/borders_edit_txt_user_register"
                    android:cursorVisible="true"
                    android:hint="@string/REg_Mobile"
                    android:inputType="phone"
                    android:layoutDirection="ltr"
                    android:lines="1"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColorHint="@color/primaryColor"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Edit_Profile_Nat_Linear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/user_register_border">

                <AutoCompleteTextView
                    android:id="@+id/autocompletecountry_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/borders_edit_txt_user_register"
                    android:cursorVisible="true"
                    android:hint="@string/nationality"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColorHint="@color/primaryColor"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/user_register_border">

                <TextView
