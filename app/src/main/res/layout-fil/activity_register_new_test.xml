<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbackgroundtest">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <include xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/both_toggle_off"
                android:layout_width="@dimen/Register_UserTypre_Image_Width"
                android:layout_height="@dimen/Register_UserType_Image_Height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/passenger_toggle_off"
                android:layout_toRightOf="@+id/passenger_toggle_off"
                android:src="@drawable/bothoff" />

            <ImageView
                android:id="@+id/both_toggle_active"
                android:layout_width="@dimen/Register_UserTypre_Image_Width"
                android:layout_height="@dimen/Register_UserType_Image_Height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/passenger_toggle_off"
                android:layout_toRightOf="@+id/passenger_toggle_off"
                android:src="@drawable/bothactive"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/passenger_toggle_off"
                android:layout_width="@dimen/Register_UserTypre_Image_Width"
                android:layout_height="@dimen/Register_UserType_Image_Height"
                android:layout_alignTop="@+id/both_toggle_off"
                android:layout_centerHorizontal="true"
                android:src="@drawable/passengeroff" />

            <ImageView
                android:id="@+id/passenger_toggle_active"
                android:layout_width="@dimen/Register_UserTypre_Image_Width"
                android:layout_height="@dimen/Register_UserType_Image_Height"
                android:layout_alignTop="@+id/both_toggle_off"
                android:layout_centerHorizontal="true"
                android:src="@drawable/passengeractive"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/driver_toggle_off"
                android:layout_width="@dimen/Register_UserTypre_Image_Width"
                android:layout_height="@dimen/Register_UserType_Image_Height"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/passenger_toggle_off"
                android:layout_toStartOf="@+id/passenger_toggle_off"
                android:src="@drawable/driveroff" />

            <ImageView
                android:id="@+id/driver_toggle_active"
                android:layout_width="@dimen/Register_UserTypre_Image_Width"
                android:layout_height="@dimen/Register_UserType_Image_Height"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/passenger_toggle_off"
                android:layout_toStartOf="@+id/passenger_toggle_off"
                android:src="@drawable/driveractive"
                android:visibility="invisible" />


        </RelativeLayout>

        <LinearLayout
